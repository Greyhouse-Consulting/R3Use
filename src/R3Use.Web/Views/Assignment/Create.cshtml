@model R3Use.Web.ViewModels.AssignmentViewModel

@{
    ViewData["Title"] = "Create new assignment";
}

<div class="panel panel-default">


    <div class="panel-heading">Create new assignment</div>
    <div class="panel-body">

        <form asp-controller="Assignment" asp-action="Create" method="post">
             <div class="form-group">
                <label for="name">Name:</label>
                <input id="name" class="form-control" asp-for="Name" data-val-required="The Name field is required."/> <br/>
            </div>
            <input id="create" type="submit" value="Create" class="btn btn-primary" />

        </form>
    </div>
</div>